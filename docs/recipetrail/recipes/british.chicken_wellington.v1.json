  "preparation": {
    "prep_time_minutes": 30,
    "steps": [
      {
        "step": "Season the chicken breast evenly with salt and black pepper."
      },
      {
        "step": "Finely chop the mushrooms and garlic, and strip the thyme leaves."
      },
      {
        "step": "Prepare an egg wash by lightly beating {{eggs}}.",
        "variables": {
          "eggs": { "quantity_per_serving": 0.5, "unit": "count" }
        }
      }
    ]
  },
  "cooking": {
    "cook_time_minutes": 40,
    "steps": [
      {
        "step": "Heat olive oil in a pan over medium-high heat and quickly sear the chicken on both sides until lightly golden. Remove and brush with mustard while warm."
      },
      {
        "step": "In the same pan, melt butter and sauté mushrooms, garlic, and thyme until the mixture is dry and concentrated, forming a duxelles."
      },
      {
        "step": "Lay cured pork slices flat, spread the mushroom duxelles evenly on top, place the chicken in the center, and roll tightly. Chill for 15 minutes."
      },
      {
        "step": "Roll out the puff pastry, unwrap the chilled chicken roll, and wrap it fully in the pastry. Seal edges with egg wash."
      },
      {
        "step": "Brush the outside with egg wash, score lightly, and bake at 200°C for 30–35 minutes until golden and cooked through."
      },
      {
        "step": "Rest for 8–10 minutes before slicing and serving."
      }
    ]
  },
