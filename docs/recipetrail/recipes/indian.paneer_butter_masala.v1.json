  "preparation": {
    "prep_time_minutes": 15,
    "steps": [
      {
        "step": "Cut paneer into even bite-sized cubes and keep aside."
      },
      {
        "step": "Finely chop onions and prepare {{ginger_garlic}} paste.",
        "variables": {
          "ginger_garlic": { "quantity_per_serving": 10, "unit": "grams" }
        }
      },
      {
        "step": "Blend tomatoes into a smooth puree if not already prepared."
      }
    ]
  },
  "cooking": {
    "cook_time_minutes": 20,
    "steps": [
      {
        "step": "Heat {{butter}} in a pan over medium heat.",
        "variables": {
          "butter": { "quantity_per_serving": 20, "unit": "grams" }
        }
      },
      {
        "step": "Add onions and sauté for 4–5 minutes until lightly golden."
      },
      {
        "step": "Stir in ginger-garlic paste and cook for 1 minute until aromatic."
      },
      {
        "step": "Add tomato puree, red chili powder, and salt. Cook for 6–8 minutes until butter begins to separate."
      },
      {
        "step": "Add {{water}} and simmer for 2–3 minutes to adjust gravy consistency.",
        "variables": {
          "water": { "quantity_per_serving": 80, "unit": "ml" }
        }
      },
      {
        "step": "Add paneer cubes, sugar, and garam masala. Gently mix and cook for 2 minutes."
      },
      {
        "step": "Lower heat and stir in cream. Simmer for another 2 minutes and switch off heat."
      }
    ]
  },
