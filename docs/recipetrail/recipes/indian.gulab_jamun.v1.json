  "preparation": {
    "prep_time_minutes": 20,
    "steps": [
      {
        "step": "In a bowl, gently mix {{khoya}}, {{flour}}, and {{baking_powder}} until combined.",
        "variables": {
          "khoya": { "quantity_per_serving": 60, "unit": "grams" },
          "flour": { "quantity_per_serving": 10, "unit": "grams" },
          "baking_powder": { "quantity_per_serving": 1, "unit": "grams" }
        }
      },
      {
        "step": "Add {{milk}} gradually and knead lightly to form a soft, smooth dough. Do not overwork.",
        "variables": {
          "milk": { "quantity_per_serving": 10, "unit": "ml" }
        }
      },
      {
        "step": "Divide the dough into small equal portions and roll gently into crack-free balls."
      },
      {
        "step": "In a saucepan, combine {{sugar}} and {{water}} and bring to a boil to prepare the syrup.",
        "variables": {
          "sugar": { "quantity_per_serving": 55, "unit": "grams" },
          "water": { "quantity_per_serving": 60, "unit": "ml" }
        }
      },
      {
        "step": "Add crushed cardamom to the syrup and keep warm on low heat."
      }
    ]
  },
  "cooking": {
    "cook_time_minutes": 20,
    "steps": [
      {
        "step": "Heat {{ghee}} in a deep pan over low-medium heat.",
        "variables": {
          "ghee": { "quantity_per_serving": 30, "unit": "ml" }
        }
      },
      {
        "step": "Fry the dough balls gently, stirring continuously, until evenly golden brown (8â€“10 minutes)."
      },
      {
        "step": "Remove fried jamuns and immediately transfer them into the warm sugar syrup."
      },
      {
        "step": "Allow the gulab jamuns to soak in the syrup for at least 30 minutes before serving."
      }
    ]
  },
