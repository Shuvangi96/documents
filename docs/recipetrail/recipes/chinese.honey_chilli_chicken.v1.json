  "preparation": {
    "prep_time_minutes": 15,
    "steps": [
      {
        "step": "In a bowl, coat chicken pieces with {{cornstarch}} and {{salt}} until evenly covered.",
        "variables": {
          "cornstarch": { "quantity_per_serving": 25, "unit": "grams" },
          "salt": { "quantity_per_serving": 2, "unit": "grams" }
        }
      },
      {
        "step": "Finely mince garlic and ginger, dice bell peppers, and slice spring onions."
      },
      {
        "step": "In a small bowl, mix {{soy}}, {{honey}}, and {{chili_sauce}} to prepare the sauce.",
        "variables": {
          "soy": { "quantity_per_serving": 20, "unit": "ml" },
          "honey": { "quantity_per_serving": 20, "unit": "grams" },
          "chili_sauce": { "quantity_per_serving": 10, "unit": "ml" }
        }
      }
    ]
  },
  "cooking": {
    "cook_time_minutes": 15,
    "steps": [
      {
        "step": "Heat {{oil}} of vegetable oil in a wok over medium-high heat.",
        "variables": {
          "oil": { "quantity_per_serving": 30, "unit": "ml" }
        }
      },
      {
        "step": "Fry the coated chicken pieces for 5–6 minutes until golden and crispy. Remove and set aside."
      },
      {
        "step": "In the same wok, add garlic, ginger, and chili flakes. Sauté for 30–40 seconds until aromatic."
      },
      {
        "step": "Add bell peppers and stir-fry for 1–2 minutes, keeping them slightly crunchy."
      },
      {
        "step": "Pour in the prepared sauce and cook for 1–2 minutes until it thickens slightly."
      },
      {
        "step": "Add fried chicken back to the wok and toss well to coat evenly in the sauce."
      },
      {
        "step": "Finish with spring onions and serve hot."
      }
    ]
  },
