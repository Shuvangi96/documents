      }
    ]
  },
  "cooking": {
    "cook_time_minutes": 10,
    "steps": [
      {
        "step": "Heat the cream mixture gently over low heat, stirring until sugar dissolves. Do not boil."
      },
      {
        "step": "Remove from heat and stir in bloomed gelatin until fully dissolved."
      },
      {
        "step": "Add vanilla extract and mix well."
      },
      {
        "step": "Pour the mixture into prepared molds and allow to cool slightly before refrigerating."
      },
      {
        "step": "Chill for at least 4 hours, or until fully set."
      }
    ]
