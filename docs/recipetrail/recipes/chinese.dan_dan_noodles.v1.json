      }
    ]
  },
  "cooking": {
    "cook_time_minutes": 15,
    "steps": [
      {
        "step": "Cook noodles according to package instructions until al dente. Drain and set aside."
      },
      {
        "step": "Heat {{oil}} of vegetable oil in a wok over medium-high heat.",
        "variables": {
          "oil": { "quantity_per_serving": 10, "unit": "ml" }
        }
      },
      {
        "step": "Add ground pork and stir-fry for 3–4 minutes until browned."
      },
      {
        "step": "Stir in doubanjiang, garlic, ginger, chili flakes, and Sichuan peppercorns. Cook for 1–2 minutes until aromatic."
      },
      {
        "step": "Divide prepared sauce into serving bowls, top with noodles, then spoon the pork mixture over the top."
      },
      {
        "step": "Garnish with spring onions and serve immediately."
      }
