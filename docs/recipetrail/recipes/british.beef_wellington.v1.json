  "preparation": {
    "prep_time_minutes": 35,
    "steps": [
      {
        "step": "Season the beef generously with salt and black pepper."
      },
      {
        "step": "Finely chop the mushrooms and garlic; strip thyme leaves."
      },
      {
        "step": "Prepare an egg wash by beating {{eggs}} lightly.",
        "variables": {
          "eggs": { "quantity_per_serving": 0.5, "unit": "count" }
        }
      }
    ]
  },
  "cooking": {
    "cook_time_minutes": 45,
    "steps": [
      {
        "step": "Heat olive oil in a hot pan and quickly sear the beef on all sides until browned. Remove and brush with mustard while warm."
      },
      {
        "step": "In the same pan, melt butter and sauté mushrooms, garlic, and thyme until all moisture evaporates and a thick duxelles forms."
      },
      {
        "step": "Lay cured pork slices flat, spread the duxelles evenly on top, and place the beef in the center. Roll tightly and chill for 15 minutes."
      },
      {
        "step": "Roll out the puff pastry, unwrap the beef roll, place it on the pastry, and wrap tightly. Seal edges with egg wash."
      },
      {
        "step": "Brush the outside with egg wash, score lightly, and bake at 200°C for 30–35 minutes until golden and cooked to desired doneness."
      },
      {
        "step": "Rest for 10 minutes before slicing and serving."
      }
    ]
  },
