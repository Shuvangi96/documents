  "preparation": {
    "prep_time_minutes": 10,
    "steps": [
      {
        "step": "Finely grate the cheese and set aside at room temperature."
      },
      {
        "step": "Crack black pepper coarsely using a mortar or grinder."
      },
      {
        "step": "Bring a pot of water to boil and season with {{salt}}.",
        "variables": {
          "salt": { "quantity_per_serving": 3, "unit": "grams" }
        }
      }
    ]
  },
  "cooking": {
    "cook_time_minutes": 15,
    "steps": [
      {
        "step": "Cook spaghetti in boiling water until al dente, reserving {{water}} of pasta water before draining.",
        "variables": {
          "water": { "quantity_per_serving": 120, "unit": "ml" }
        }
      },
      {
        "step": "Toast black pepper in a dry pan over low heat for 30–40 seconds until aromatic."
      },
      {
        "step": "Add reserved pasta water to the pan and bring to a gentle simmer."
      },
      {
        "step": "Add drained spaghetti to the pan and toss to coat evenly."
      },
      {
        "step": "Remove pan from heat and gradually add grated cheese, stirring continuously to form a creamy emulsion."
      },
      {
        "step": "Adjust consistency with additional pasta water if needed and serve immediately."
      }
    ]
  },
