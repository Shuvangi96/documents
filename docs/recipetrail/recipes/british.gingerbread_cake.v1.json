  "preparation": {
    "prep_time_minutes": 20,
    "steps": [
      {
        "step": "Preheat the oven to 180°C and grease a small cake tin."
      },
      {
        "step": "Sift together the flour, baking powder, salt, ginger, cinnamon, cloves, and nutmeg."
      },
      {
        "step": "Beat {{eggs}} lightly in a separate bowl.",
        "variables": {
          "eggs": { "quantity_per_serving": 0.5, "unit": "count" }
        }
      }
    ]
  },
  "cooking": {
    "cook_time_minutes": 45,
    "steps": [
      {
        "step": "Melt the butter gently in a saucepan, then stir in sugar and molasses until smooth."
      },
      {
        "step": "Remove from heat and mix in the beaten eggs and milk until fully combined."
      },
      {
        "step": "Gradually fold the dry ingredients into the wet mixture, stirring until a smooth batter forms."
      },
      {
        "step": "Pour the batter into the prepared tin and smooth the surface."
      },
      {
        "step": "Bake for 40–45 minutes, until a skewer inserted in the center comes out clean."
      },
      {
        "step": "Allow the cake to cool for 10 minutes before removing from the tin."
      }
    ]
  },
