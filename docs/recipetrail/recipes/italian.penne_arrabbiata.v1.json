    "steps": [
      {
        "step": "Finely chop the {{garlic}} and parsley.",
        "variables": {
          "garlic": { "quantity_per_serving": 6, "unit": "grams" }
        }
      },
      {
        "step": "Bring a large pot of salted water to a boil for cooking the pasta."
      }
    ]
  },
  "cooking": {
    "cook_time_minutes": 15,
    "steps": [
      {
        "step": "Cook the penne in boiling water until al dente, then reserve some pasta water and drain."
      },
      {
        "step": "Heat {{olive_oil}} in a pan over medium heat and gently sauté the garlic until fragrant.",
        "variables": {
          "olive_oil": { "quantity_per_serving": 15, "unit": "ml" }
        }
      },
      {
        "step": "Add chili flakes and stir briefly to release heat without burning."
      },
      {
        "step": "Pour in the tomato sauce, season with salt, and simmer for 8–10 minutes until slightly thickened."
      },
      {
        "step": "Add the cooked pasta to the sauce, tossing well. Use reserved pasta water if needed to loosen."
      },
      {
        "step": "Finish with chopped parsley and serve immediately."
      }
    ]
  },
